# Example env file for deployment â€” REMOVE real secrets before committing

# External (login) DB
EXTERNAL_DB_HOST=your.external.db.host
EXTERNAL_DB_PORT=3306
EXTERNAL_DB_USER=app_user
EXTERNAL_DB_PASSWORD=
EXTERNAL_DB_NAME=sistemas

# Local app DB (sistema de tickets)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_USER=app_user
DB_PASSWORD=
DB_NAME=sistema_ticket_recrear

# Flask / app
FLASK_APP=run.py
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=replace_with_a_secure_random_value

# JWT (example)
JWT_SECRET_KEY=replace_with_jwt_secret
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Email (optional)
SMTP_SERVER=
SMTP_PORT=
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=

# Logs and uploads
LOG_LEVEL=INFO
LOG_FILE=app.log
UPLOAD_FOLDER=flask_app/static/uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=pdf,png,jpg,jpeg,gif,doc,docx,xls,xlsx,txt
